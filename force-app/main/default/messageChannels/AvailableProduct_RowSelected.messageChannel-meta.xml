<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Fires when user selects a product from the Available Products list</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>Name of product to be added</description>
        <fieldName>productName</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Quantity of product to be added</description>
        <fieldName>quantity</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>This is the record Id of the pricebookEntry of the product that is clicked</description>
        <fieldName>pricebookEntryId</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>List price of product to be added</description>
        <fieldName>unitPrice</fieldName>
    </lightningMessageFields>
    <masterLabel>AvailableProduct_RowSelection</masterLabel>
</LightningMessageChannel>
